# git
#####
alias g='git'
alias b='git branch'
alias co='git checkout'
alias ggrep='git grep'
alias glog='git glog'
alias d='git diff'
alias st='git status'
alias pd='git patdiff'
alias pull='git pull'

# tmux
######
alias tl='tmux list-sessions'
alias ta='tmux attach -t'
alias wrok='work'
alias tmid='tmate show-messages'

# bash
######
alias f='find . -name'
# alias words='/usr/share/dict/words'
alias clera='clear'
alias utc='date -u +"%Y-%m-%dT%H:%M:%SZ"'
alias art='vim -c "source ${HOME}/bin/prep.vim"'
alias be='bundle exec'
alias ot='open -a TextEdit'
alias brave='open -a Brave'
alias bu='brew update && brew upgrade && brew cleanup && brew prune'
alias dds='find . -name .DS_Store | xargs rm'

# postgresql
############
alias pgup='pg_ctl -D /usr/local/var/postgres start'
alias pgdown='pg_ctl -D /usr/local/var/postgres stop'

# clojure
#########
alias ltr='lein test-refresh :changes-only'
alias rrl='clojure -R:rebel -m rebel-readline.main'
alias lrr='lein trampoline run -m rebel-readline.main'
alias node-cljs='clj -m cljs.main --repl-env node'

# redis
#######
alias rup='redis-server /usr/local/etc/redis.conf &'
